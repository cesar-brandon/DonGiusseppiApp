<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    tools:context=".ui.category.CategoryFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_pizza.json"
        app:lottie_loop="true"
        app:lottie_speed="1" />

    <ImageView
        android:id="@+id/iv_category_pizza"
        android:layout_width="150dp"
        android:layout_height="290dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_pizza" />

    <ImageView
        android:id="@+id/iv_category_icecream"
        android:layout_width="150dp"
        android:layout_height="297dp"
        android:paddingStart="10dp"
        android:translationY="-15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_category_pizza"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_helados"
        tools:layout_editor_absoluteY="6dp" />

    <ImageView
        android:id="@+id/iv_category_dessert"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:paddingEnd="10dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_pizza"
        app:srcCompat="@drawable/main_postres" />

    <ImageView
        android:id="@+id/iv_category_soda"
        android:layout_width="150dp"
        android:layout_height="340dp"
        android:paddingStart="10dp"
        android:translationY="-10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toEndOf="@+id/iv_category_dessert"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_icecream"
        app:srcCompat="@drawable/main_bebidas" />

</androidx.constraintlayout.widget.ConstraintLayout>